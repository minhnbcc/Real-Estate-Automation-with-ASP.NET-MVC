@model EmlakOtomasyonuProje.DB.Products

@*Partial View*@
@{ 
    
    if (string.IsNullOrEmpty(Model.ProductImageName1))
    {
        Model.ProductImageName1 = "/images/300x150.png";
    }
        
}
<div class="col-md-3 col-sm-4 col-xs-12">
    <div class="thumbnail">
        <img src="@Model.ProductImageName1" class="img img-responsive" style="max-height:126px;">
        <div class="caption">
            <h3>@Model.Name</h3>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            <p>
               
                <a href="~/i/Product/@Model.Id" class="btn btn-info">
                    <span class="glyphicon glyphicon-info-sign"></span>&nbsp;Bilgi (İlana Git)
                </a>
            </p>
        </div>
    </div>
</div>